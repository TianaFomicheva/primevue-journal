
    {
        "compilerOptions": {

            "moduleResolution": "node",
            "resolveJsonModule": true,


            "jsx": "preserve",
            "jsxImportSource": "vue",
 
            "noImplicitThis": true,
            "strict": true,

            "verbatimModuleSyntax": true,

            "target": "ESNext",

            "useDefineForClassFields": true,
            // Recommended
            "esModuleInterop": true,
            "forceConsistentCasingInFileNames": true,
            "skipLibCheck": true,
            "lib": [
                "ES2021.String"
            ]
        }
    }
